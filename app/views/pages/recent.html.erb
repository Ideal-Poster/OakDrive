<%= form_tag episodes_path, method: :get do %>
  <%= text_field_tag :query, params[:query], placeholder: "search",class: "recent-search hidden-xs hidden-sm" %>
<% end %>


<div class="col-sm-12" id="content-container" style="padding-top:-15px;">
  <h3 class="title-spacing index-alignment most-recent-spacing"
      style="margin-bottom:30px;">MOST RECENT
  </h3>

  <div class="recent-container">
    <div class="recent-spotlight">
      <%= link_to image_tag(@episodes.first.image.url(:medium)), @episodes.first  %>
      <h3 class="index-alignment title-spacing">  <%= @episodes.first.title %></h3>
      <p><%= @episodes.first.description %></p>
      <br>
    </div>

    <div class="hidden-xs hidden-sm box box2">
    </div>

    <div class="hidden-xs hidden-sm recent">
      <% @episodes.each do |episode| %>
        <div class="recent-spacing">
          <a href="/episodes/<%= episode.episode_num %>">
            <div class="mobile-recent-img">
                <div class="recent-title">
                    <% if episode.episode_num > 9 %>
                      <%= "ep-#{episode.episode_num}" %>
                    <% else %>
                      <%= "ep-0#{episode.episode_num}" %>
                    <% end %>
                    <br>

                  <%= episode.title %>
                </div>
            </div>
          </a>

          <%= link_to image_tag(episode.image.url(:thumb)), episode %>

        </div>
      <% end %>
    </div>
  </div>
</div>

<div class="sidebar-section hidden-xs hidden-sm pull-right">
  <h4 class="title">SOCIAL ISH</h4>
  <i class="fa fa-lg fa-music" aria-hidden="true"></i>

  <a href="https://twitter.com/oakdrivepodcast">
    <i class="fa fa-lg fa-twitter" aria-hidden="true"></i>
  </a>
  <a href="https://www.facebook.com/oakdrivepodcast">
    <i class="fa fa-lg fa-facebook" aria-hidden="true"></i>
  </a>
  <a href="https://www.instagram.com/oakdrivepodcast/">
    <i class="fa fa-lg fa-instagram" aria-hidden="true"></i>
  </a>
</div>

<div class="mobile-recent-container">

  <% @episodes.sort.each do |episode| %>
    <div class="index-alignment mobile-recent hidden-md hidden-lg hidden-xl ">
      <%= link_to image_tag(episode.image.url(:thumb)), episode %>

      <div class="ep">
        <% if episode.episode_num > 9 %>
          <%= "ep-#{episode.episode_num}" %>
        <% else %>
          <%= "ep-0#{episode.episode_num}" %>
        <% end %>

      </div>
      <div class="mobile-recent-spacing">
        <%= episode.title %>
      </div>

    </div>
  <% end %>
</div>
